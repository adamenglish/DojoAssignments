@{
    ViewData["Title"] = "Form Submission";
}
<h1>Enter your information</h1>
<form action="/success" method="post">
<p><h3>First name: <input type="text" name="FirstName"></h3></p>
<p><h3>Last name: <input type="text" name="LastName"></h3></p>
<p><h3>Age<input type="text" name="Age"></h3></p>
<p><h3>Email: <input type="text" name="Email"></h3></p>
<p><h3>Password: <input type="text" name="Password"></h3></p>
<button type ="submit">Submit</button>
</form>

<div>
    @{
        foreach(var error in ViewBag.Errors)
        {
            //If there are any errors for a field...
            if(@error.Errors.Count > 0)
            {
                // We show the first error for that field
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>