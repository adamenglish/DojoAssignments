<h1> Welcome, @ViewBag.CurrUser.firstname @ViewBag.CurrUser.lastname</h1>
<h2>Current balance: @ViewBag.CurrUser.money</h2>

<form action = "render" method = "POST">
    <label for="action">Deposit/Withdraw:</label>
    <input type="number" name = "Amount"> 
    <input type="submit" value="Submit">
</form><br><br><br>

<p>@ViewBag.NoMoneyError</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var activity in @ViewBag.AllMyActions)
            {
                <tr>
                    <td>@activity.amount</td>
                    <td>@activity.created_at </td>
                </tr>
            }
        }
    </tbody>
</table>